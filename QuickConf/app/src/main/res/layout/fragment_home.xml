<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.samworks.quickconf.HomeFragment">

    <android.support.v7.widget.CardView

        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardBackgroundColor="#ecf0f1"
        android:layout_centerInParent="true">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"

            android:layout_margin="20dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imgph"
                android:src="@drawable/phone"
                android:layout_margin="4dp"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_toRightOf="@+id/imgph"
                android:text="@string/conf_num_txt"
                android:id="@+id/txtph"
                android:layout_margin="4dp"
                android:textStyle="bold"

                />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imgid"
                android:layout_below="@+id/imgph"
                android:src="@drawable/lock"
                android:layout_margin="4dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_toRightOf="@+id/imgid"
                android:text="@string/confId"
                android:layout_below="@+id/txtph"
                android:id="@+id/txtID"
                android:layout_margin="4dp"
                android:textStyle="bold|italic"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:textAppearance="?android:attr/textAppearanceSmall"

                android:text="JOIN"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:id="@+id/btnJoin"
                android:layout_margin="4dp"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"

                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>
